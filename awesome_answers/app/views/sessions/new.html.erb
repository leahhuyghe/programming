<h1>Sign In</h1>

<div class="col-md-4">
  <%# We use form_tag here because we don't have an instance variable
      We use form_for when we actually have an instance variable like
      @question or @answer %>
  <%= form_tag sessions_path, class: "form-horizontal" do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email,"", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password,"", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Log In", class: "btn btn-primary bnt-lg btn-block" %>
    </div>
  <% end %>
</div>
